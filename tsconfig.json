{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",       // root folder
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["server.ts", "src/**/*"],   // include root server.ts + src folder
  "exclude": ["node_modules", "dist"]
}
